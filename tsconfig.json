{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2018", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "outDir": "./build/tsc",
    "skipLibCheck": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "target": "es2018",
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "typeRoots": ["node_modules/@types", "types"],
    "noEmit": true
  },
  "include": ["api", "pages", "scripts", "src", "test", "types", "next-env.d.ts"],
  "exclude": ["node_modules", "build", "ignore"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "files": true
  }
}
